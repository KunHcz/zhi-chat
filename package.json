{
  "name": "zhi-chat",
  "version": "1.0.0",
  "description": "即时通讯桌面应用程序（含AI功能）",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "npm run build && npm run build:main && npm run build:preload && node copy-preload.js",
    "electron:dev": "concurrently \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 npm run dev\" \"npm run electron\"",
    "electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build:all && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "即时通讯",
    "AI助手",
    "聊天应用"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@esbuild/win32-x64": "^0.20.2",
    "@types/node": "^22.14.1",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.1.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.9",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.zhichat.app",
    "productName": "ZhiChat",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
